# Case expression with block syntax (multiline)

x = 2
result = case x
when 1
  "one"
when 2
  "two"
when 3
  "three"
else
  "other"
end
puts result

# Case expression with string matching
value = "hello"
output = case value
when "hello"
  "greeting"
when "goodbye"
  "farewell"
else
  "unknown"
end
puts output

# Case expression with numeric comparison
num = -5
sign = case
when num > 0
  "positive"
when num < 0
  "negative"
else
  "zero"
end
puts sign
