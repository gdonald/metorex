def greet(name, greeting="Hello", punctuation="!")
  greeting + " " + name + punctuation
end

puts greet("Alice", "Hi", "!!!")
puts greet("Bob", "Hey")
puts greet("Charlie")

def create_message(username, role="user")
  username + ":" + role
end

puts create_message("admin")
puts create_message("john", "moderator")

def power(base, exponent=2)
  result = 1
  i = 0
  while i < exponent
    result = result * base
    i = i + 1
  end
  result
end

puts power(3)
puts power(3, 3)
puts power(2, 5)

def format_price(price, currency="USD")
  currency + " " + price
end

puts format_price("100")
puts format_price("50", "EUR")
